@model IEnumerable<Wallet.Wise.BLL.DTOs.RecordDto>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var record in Model)
    {
    <tr>
        <td>@record.Id</td>
        <td>@record.Name</td>
        <td>@record.Description</td>
        <td>@record.Date.ToString("yyyy-MM-dd")</td>
        <td>@record.Amount.ToString("C")</td>
        <td>
            <!-- Редагувати -->
            <a asp-action="Edit" asp-controller="Records" asp-route-id="@record.Id" class="btn btn-warning">Edit</a>
            <!-- Видалити -->
            <form method="post" asp-action="Delete" asp-route-id="@record.Id" asp-route-CategoryId="@ViewData["CategoryId"]" asp-route-Mount="@ViewData["Mount"]" style="display:inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>